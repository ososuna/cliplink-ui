---
import ClipLinkLogo from '@/presentation/components/shared/ClipLinkLogo.astro';
import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle
} from '@/presentation/styled-components';
import ShortenForm from '@/presentation/components/url/ShortenForm';

export const prerender = true;

---
<Card className="w-full max-w-md mx-auto">
  <CardHeader>
    <CardTitle><ClipLinkLogo class="w-6 h-6" /></CardTitle>
    <CardDescription>Enter a long URL to get a shortened version</CardDescription>
  </CardHeader>
  <ShortenForm client:load />
</Card>
