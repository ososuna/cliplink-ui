---
import { UrlServiceImpl } from '@/infrastructure';

import { UrlViewService } from '@/presentation';
import HomeLayout from '@/presentation/layouts/HomeLayout.astro';
import Dashboard from '@/presentation/components/url/Dashboard';

const viewService = new UrlViewService(new UrlServiceImpl());
const urls = await viewService.getUrls();
---

<HomeLayout>
  <div class="container mx-auto p-4 self-start">
    <h1 class="text-2xl font-bold mb-8">Dashboard</h1>
    <Dashboard urls={ urls } client:load />
  </div>
</HomeLayout>
