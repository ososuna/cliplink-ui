---
import BaseLayout from '@/presentation/layouts/BaseLayout.astro';
import ClipLinkLogo from '@/presentation/components/shared/ClipLinkLogo.astro';
import {
  Button,
  Card,
  CardContent,
  CardFooter,
  CardHeader,
  CardTitle
} from '@/presentation/styled-components';

export const prerender = true;
---

<BaseLayout title="ClipLink - 404" description="404 - Not Found">
  <div class="h-screen w-full flex items-center justify-center bg-background">
    <Card className="w-[350px] text-center">
      <CardHeader>
        <div class="flex justify-center mb-2">
          <ClipLinkLogo class="w-8 h-8" />
        </div>
        <CardTitle className="text-4xl font-bold">404</CardTitle>
      </CardHeader>
      <CardContent>
        <p class="text-xl text-muted-foreground">Page not found</p>
      </CardContent>
      <CardFooter className="flex justify-center">
        <a href="/">
          <Button asChild>
            Go Home
          </Button>
        </a>
      </CardFooter>
    </Card>
  </div>
</BaseLayout>