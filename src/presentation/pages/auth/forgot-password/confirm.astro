---
import { Mail } from 'lucide-react';
import AuthLayout from '@/presentation/layouts/AuthLayout.astro';
import EmailSentTo from '@/presentation/components/auth/EmailSentTo.astro';

export const prerender = true;
---
<AuthLayout action="forgot-password">
  <div class="w-full max-w-md mx-auto">
    <div class="flex flex-col items-center space-y-2">
      <h1 class="text-2xl font-semibold tracking-tight text-center">
        Please check your email
      </h1>
      <p class="px-8 text-center text-sm text-muted-foreground">
        If the email you entered is associated with an account, you will receive an email with a link to reset your password
      </p>
      <div class="w-full max-w-xs space-y-2">
        <Mail className="mx-auto h-12 w-12 text-blue-500 mb-4" />
        <EmailSentTo />
        <p class="text-sm text-center text-muted-foreground">
          Click the link in the email to reset your password. If you don't see
          the email, check your spam folder.
        </p>
        <div class="text-center">
          <a
            href="/auth/login"
            class="font-normal text-sm text-blue-600 dark:text-blue-500 hover:underline"
          >
            ‚Üê Back to Login
          </a>
        </div>
      </div>
    </div>
  </div>
</AuthLayout>
